{
  "name": "@robo-brain/mcp-client-cli",
  "version": "0.1.1",
  "description": "MCP client CLI for interacting with a MCP server",
  "license": "MIT",
  "author": "Aldrin Inbaraj",
  "homepage": "",
  "bugs": "",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "mcp-client": "./dist/bin.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/bin.js', '755')\" && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc-watch --onSuccess \"chmod 755 dist/bin.js && chmod 755 dist/index.js\"",
    "format": "prettier --write .",
    "start": "node ./dist/bin.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "@types/express": "^5.0.6",
    "chalk": "^5.3.0",
    "dotenv": "16.4.7",
    "express": "^5.2.1",
    "ollama": "^0.6.3",
    "openai": "^6.9.0",
    "tiktoken": "^1.0.22",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "bun": "^1.1.38",
    "prettier": "^3.4.1",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.7.2"
  }
}
